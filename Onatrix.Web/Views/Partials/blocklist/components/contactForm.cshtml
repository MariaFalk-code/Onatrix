@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels

@{
  var content = (ContentModels.ContactForm)Model.Content;
  var settings = Model.Settings as ContentModels.ContactFormSettings;

  var showLabel = settings?.ShowLabel == true;
  var showTitle = settings?.ShowTitle == true;
  var showBody = settings?.ShowBody == true;
}

@* When this contactform is rendered, it is contained on the page in a section-tag with a class specific to the section where it is rendered.
   This page/section-specific class is styled in the scss-file of the section in question. *@

<div class="contact-form__content-wrapper">
  @if (showLabel) {
    <span class="label">@content.FormLabel</span>
  }
  @if (showTitle) {
    <h3>@content.FormTitle</h3>
  }
  @if (showBody) {
    <p>@content.FormBody</p>
  }

  <form class="contact-form__form" method="post">
    <div class="contact-form__row">
      <input type="text" class="contact-form__input" placeholder="First name" disabled />
      <input type="text" class="contact-form__input" placeholder="Last name" disabled />
    </div>
    <div class="contact-form__row">
      <input type="email" class="contact-form__input" placeholder="Email address" disabled />
      <input type="text" class="contact-form__input" placeholder="Phone" disabled />
    </div>
    <div class="contact-form__row">
      <select class="contact-form__select" disabled>
        <option disabled selected>Choose area of inquiry</option>
        <option>Financial consulting</option>
        <option>Legal services</option>
        <option>Other</option>
      </select>
    </div>
    <button type="submit" disabled>Submit</button>
  </form>
</div>

